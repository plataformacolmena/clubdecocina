rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Reglas para administradores
    match /admins/{adminId} {
      allow read: if request.auth != null;
    }
    
    // Reglas para cursos
    match /cursos/{cursoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Reglas para inscripciones (pueden contener datos base64 temporales)
    match /inscripciones/{inscripcionId} {
      allow read: if request.auth != null && 
        (resource.data.usuarioId == request.auth.uid || 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
      allow create: if request.auth != null && 
        request.resource.data.usuarioId == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.usuarioId == request.auth.uid || 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }
    
    // Reglas para recetas (pueden contener im√°genes base64)
    match /recetas/{recetaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Reglas para comentarios de recetas
    match /comentarios/{comentarioId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.resource.data.usuarioId == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.usuarioId == request.auth.uid || 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
    }
  }
}